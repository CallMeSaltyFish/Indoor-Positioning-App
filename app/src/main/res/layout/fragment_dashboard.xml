<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/distance_text_view_1"
            android:layout_width="111dp"
            android:layout_height="38dp"
            android:layout_marginBottom="12dp"
            android:text="@string/device_1"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/distance_text_view_2"
            app:layout_constraintEnd_toStartOf="@+id/distance_edit_text_1"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/distance_text_view_2"
            android:layout_width="111dp"
            android:layout_height="38dp"
            android:text="@string/device_2"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/rssi_line_chart"
            app:layout_constraintEnd_toStartOf="@+id/distance_edit_text_2"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toStartOf="parent" />

    <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/rssi_line_chart"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.522" />

    <Button
            android:id="@+id/start_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:text="@string/start_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rssi_line_chart"
            app:layout_constraintVertical_bias="0.502" />

    <Button
            android:id="@+id/stop_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toEndOf="@+id/start_scan_button"
            app:layout_constraintTop_toBottomOf="@+id/rssi_line_chart"
            app:layout_constraintVertical_bias="0.502" />

    <EditText
            android:id="@+id/distance_edit_text_0"
            android:layout_width="167dp"
            android:layout_height="51dp"
            android:gravity="center|center_horizontal"
            android:inputType="number"
            android:textSize="30sp"
            app:fontFamily="sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@+id/rssi_line_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.413" />

    <EditText
            android:id="@+id/distance_edit_text_2"
            android:layout_width="167dp"
            android:layout_height="51dp"
            android:gravity="center|center_horizontal"
            android:inputType="number"
            android:textSize="30sp"
            app:fontFamily="sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@+id/rssi_line_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <EditText
            android:id="@+id/distance_edit_text_1"
            android:layout_width="167dp"
            android:layout_height="51dp"
            android:gravity="center|center_horizontal"
            android:inputType="number"
            android:textSize="30sp"
            app:fontFamily="sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@+id/rssi_line_chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.706" />

    <TextView
            android:id="@+id/distance_text_view_0"
            android:layout_width="111dp"
            android:layout_height="38dp"
            android:layout_marginBottom="12dp"
            android:text="@string/device_0"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/distance_text_view_1"
            app:layout_constraintEnd_toStartOf="@+id/distance_edit_text_0"
            app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/distance_text_view"
            android:layout_width="89dp"
            android:layout_height="39dp"
            android:text="@string/distance"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/distance_text_view_0"
            app:layout_constraintEnd_toStartOf="@+id/distance_edit_text_0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>